<?xml version="1.0" encoding="utf-8"?>
<com.daimajia.swipe.SwipeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sl_content"
    android:layout_width="match_parent"
    android:layout_height="120dp">
    <LinearLayout
        android:layout_width="270dp"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <Button
            android:id="@+id/facebook_share"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="right"
            android:text="facebook share"
            android:layout_gravity="center"/>

        <Button
            android:id="@+id/email_share"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="right"
            android:layout_weight="1"
            android:text="email share"
            android:layout_gravity="center"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="10dp"
            app:srcCompat="@drawable/sample1" />

        <Button
            android:id="@+id/add_or_delete_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/imageView"
            android:layout_centerInParent="true"
            android:background="@android:color/transparent"
            android:text="@string/add_button" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/add_or_delete_button"
            android:layout_centerHorizontal="true"
            android:text="TextView" />



        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_share"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="2dp"
            android:backgroundTint="@android:color/transparent"
            android:elevation="6dp"
            app:borderWidth="0dp"
            app:fabSize="mini"
            app:pressedTranslationZ="12dp" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_facebook_share"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/fab_share"
            android:backgroundTint="@color/blue"
            android:elevation="6dp"
            android:visibility="invisible"
            app:fabSize="mini"
            app:pressedTranslationZ="12dp"
            tools:layout_editor_absoluteX="60dp"
            tools:layout_editor_absoluteY="0dp" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_email_share"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/fab_facebook_share"
            android:backgroundTint="@color/colorAccent"
            android:elevation="6dp"
            android:visibility="invisible"
            app:fabSize="mini"
            app:pressedTranslationZ="12dp"
            tools:layout_editor_absoluteX="30dp"
            tools:layout_editor_absoluteY="0dp" />
    </RelativeLayout>
</com.daimajia.swipe.SwipeLayout>